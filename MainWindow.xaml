<Window x:Class="PhamKieuTrang_2023602849_LuyenTapV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Quản lý công nhân" Height="560" Width="720">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="Navy"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>

        <Style x:Key="myTextbox" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="FontSize" Value="10"/>
                    <Setter Property="Background" Value="#ffc"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SalaryCellStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="Foreground" Value="Blue"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Yellow"/>
            <Setter Property="Foreground" Value="Blue"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="16"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter  Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="QUẢN LÝ CÔNG NHÂN"
               Grid.Row="0" Grid.ColumnSpan="3"
               FontSize="20" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Label Content="Mã công nhân" Grid.Row="1" Grid.Column="0" Margin="50,0,0,0"/>
            <TextBox x:Name="txtMa" Grid.Row="1" Grid.Column="1"
                 Style="{StaticResource myTextbox}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Label x:Name="errMa" Grid.Row="1" Grid.Column="2" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Left" />

            <Label Content="Họ tên" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"  />
            <TextBox x:Name="txtHoTen" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                 Style="{StaticResource myTextbox}" />
            <Label x:Name="errHoTen" Grid.Row="2" Grid.Column="2" Foreground="Red" HorizontalAlignment="Left"/>

            <Label Content="Ngày sinh" Grid.Row="3" Grid.Column="0" Margin="50,0,0,0"/>
            <DatePicker x:Name="dpNgaySinh" Grid.Row="3" Height="30" Grid.Column="1" Width="200" HorizontalAlignment="Left" VerticalContentAlignment="Center"/>
            <Label x:Name="errNgaySinh" Grid.Row="3" Grid.Column="2" Foreground="Red" HorizontalAlignment="Left"/>

            <Label Content="Giới tính" Grid.Row="4" Grid.Column="0" Margin="50,0,0,0"/>
            <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="190" Margin="0,40,0,0" Grid.RowSpan="2">
                <RadioButton x:Name="rbNam" Content="Nam" Height="20" Width="70" IsChecked="False"/>
                <RadioButton x:Name="rbNu" Content="Nữ" Height="20" Width="70"  IsChecked="False"/>
            </StackPanel>
            <Label x:Name="errGioiTinh" Grid.Row="4" Grid.Column="2" Foreground="Red" HorizontalAlignment="Left"/>

            <Label Content="Địa chỉ" Grid.Row="5" Grid.Column="0" Margin="50,0,0,0"/>
            <ComboBox x:Name="cboDiaChi" Grid.Row="5" Grid.Column="1" Width="200" SelectedIndex="0" VerticalAlignment="Center" HorizontalAlignment="Left">
                <ComboBoxItem>Hà Nội</ComboBoxItem>
                <ComboBoxItem>Hải Phòng</ComboBoxItem>
                <ComboBoxItem>Đà Nẵng</ComboBoxItem>
                <ComboBoxItem>TP. Hồ Chí Minh</ComboBoxItem>
            </ComboBox>
            <Label x:Name="errDiaChi" Grid.Row="5" Grid.Column="2" Foreground="Red" HorizontalAlignment="Left"/>

            <Label Content="Lương" Grid.Row="6" HorizontalAlignment="Center"/>
            <TextBox x:Name="txtLuong" Grid.Row="6" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left"
                 Style="{StaticResource myTextbox}"/>
            <Label x:Name="errLuong" Grid.Row="6" Grid.Column="2" Foreground="Red" HorizontalAlignment="Left"/>

            <DataGrid x:Name="dg" Grid.Row="7" Grid.ColumnSpan="3" Margin="0,10,0,0"
                  AutoGenerateColumns="False" Width="650" Height="200" SelectionChanged="dg_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Mã CN"   Binding="{Binding MaCN}" Width="100" FontWeight="Bold"/>
                    <DataGridTextColumn Header="Họ tên"  Binding="{Binding HoTen}" Width="150"/>
                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh, StringFormat={}{0:dd/MM/yyyy}}" Width="100"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}" Width="80"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}" Width="120"/>
                    <DataGridTextColumn Header="Lương"   Binding="{Binding Luong, StringFormat={}{0:N0}}"
                                     ElementStyle="{StaticResource SalaryCellStyle}" Width="100" />
                </DataGrid.Columns>
            </DataGrid>


            <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,12,0,0">
                <Button x:Name="btnAdd" Content="Thêm" Click="Button_Add"/>
                <Button x:Name="btnUpdate" Content="Sửa" Click="Button_Update"/>
                <Button x:Name="btnDel" Content="Xóa" Click="Button_Delete"/>
                <Button x:Name="btnView" Content="Xem danh sách" Click="Button_View"/>
                <Button x:Name="btnClose" Content="Kết thúc" Click="Button_Close"/>
            </StackPanel>
        </Grid>
</Window>
